<Window x:Class="controler.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:controler"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <ComboBox Margin="15,40,15,40" Grid.ColumnSpan="2" Name="PortList" SelectionChanged="comboBox_SelectionChanged" FontSize="40">
               
        </ComboBox>
        <TextBlock Name="NowPort" Grid.Row="0" Grid.ColumnSpan="2" Grid.Column="2" Margin="15,40,15,40" FontSize="40">0</TextBlock>
        <TextBlock Name="view" Grid.Row="1" Grid.RowSpan="3" Grid.ColumnSpan="4" FontSize="60">0</TextBlock>
    </Grid>
</Window>
